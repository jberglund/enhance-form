{
  "name": "enhance-form",
  "version": "0.0.1",
  "description": "A custom element that progressively enhances HTML forms with AJAX submission, per-field validation, and targeted DOM updates.",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "demo"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./headers": {
      "types": "./dist/headers.d.ts",
      "default": "./dist/headers.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run tsc",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "publint": "bunx publint",
    "prepublishOnly": "bun run lint && bun run build",
    "demo": "cd demo && bun --watch server.tsx"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "typescript": "^5.9.3"
  }
}
